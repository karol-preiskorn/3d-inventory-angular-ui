{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "ng Firefox debug",
      "type": "firefox",
      "request": "launch",
      "port": 9222,
      "url": "http://localhost:4200/",
      "reAttach": true,
      "webRoot": "${workspaceRoot}/src"
    },
    {
      "name": "ng Chrome debug",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}/src",
      "url": "http://localhost:4200/",
      "sourceMapPathOverrides": {
        "webpack:///*": "/*"
      }
    },
    {
      "name": "ng test",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:9876/debug.html",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "ng e2e",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/protractor/bin/protractor",
      "args": [
        "${workspaceFolder}/e2e/protractor.conf.js"
      ]
    }
  ]
}
